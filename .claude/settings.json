{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp"
  },
  "permissions": {
    "allow": [
      "Bash(afplay:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm dlx:*)",
      "Bash(pnpm run *)",
      "Bash(pnpm test:*)",
      "Read(~/.zshrc)",
      "WebFetch(schema:https)"
    ],
    "deny": [
      "Bash(curl:*)"
    ]
  },
  "model": "sonnet"
}